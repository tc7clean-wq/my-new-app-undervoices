# Environment Variables for Underground Voices Backend

# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-url.vercel.app

# Supabase Configuration (Free Tier)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# NewsAPI Configuration (Free Tier)
NEWS_API_KEY=your-newsapi-key-here
NEWS_API_URL=https://newsapi.org/v2

# Encryption Keys (CryptoJS)
ENCRYPTION_KEY=your-256-bit-encryption-key-here
ENCRYPTION_IV=your-initialization-vector-here

# Panic Delete Configuration
PANIC_DELETE_CODE=your-emergency-delete-code
PANIC_DELETE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_ENCRYPTION=true
BACKUP_RETENTION_DAYS=7

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD_MS=2000

# Real-time Configuration
REALTIME_MAX_CONNECTIONS=100
REALTIME_HEARTBEAT_INTERVAL=30000

# Mobile Optimization
MOBILE_RESPONSE_TIMEOUT=2000
MOBILE_COMPRESSION_LEVEL=6

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=*

# Anonymous Features
ALLOW_ANONYMOUS_POSTING=true
ANONYMOUS_POST_LIMIT=5

# Debug (set to false in production)
DEBUG=false
{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": [
    "dist",
    ".eslintrc.cjs",
    "index.js",
    "routes/**",
    "middleware/**",
    "config/**",
    "services/**",
    "scripts/**",
    "*.js"
  ],
  "overrides": [
    {
      "files": ["src/**/*.{js,jsx}"],
      "env": {
        "browser": true,
        "es2020": true
      },
      "globals": {
        "cytoscape": "readonly"
      },
      "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-console": "warn",
        "no-debugger": "error",
        "no-unused-vars": "warn"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
